<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_mass" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/h_mass_text"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_height"
            app:layout_constraintTop_toTopOf="@+id/h_height_text"
            app:layout_constraintStart_toStartOf="@+id/h_element_mass"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_date"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/h_element_height"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_mass_text" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/h_height_text"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_height_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/h_mass_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/h_height_text"
            app:layout_constraintEnd_toEndOf="@+id/h_height_text"
    />

    <TextView
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/h_element_height"
            android:layout_marginStart="8dp" android:textSize="24sp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.52" android:textAlignment="textEnd" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_result" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/h_element_date" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/h_element_height" android:layout_marginStart="8dp"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@+id/h_element_date" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>