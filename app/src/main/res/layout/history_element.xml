<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <TextView
            android:text="M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_mass" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_height"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/h_element_mass"/>
    <TextView
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_date"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/h_element_height"/>
    <TextView
            android:text="Mass:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <TextView
            android:text="Height:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
    />
    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@+id/h_element_date" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toEndOf="@+id/h_element_height"
            android:layout_marginStart="8dp" android:textSize="30sp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.52" android:textAlignment="textEnd" android:textStyle="bold"/>
    <TextView
            android:text="22,22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_element_result" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/h_element_date" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/h_element_height" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>